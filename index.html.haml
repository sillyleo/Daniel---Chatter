!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }/
    %title 聊天列表介面
    %meta{ :name => "description", :content => "" }/
    %meta{ :name => "author", :content => "" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    / material icons
    %link{:href => "https://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}/
    %link{:href => "https://code.getmdl.io/1.1.3/material.indigo-pink.min.css", :rel => "stylesheet"}/
    %script{:defer => "defer", :src => "https://code.getmdl.io/1.1.3/material.min.js"}
    %link{ :rel => "stylesheet", :href => "stylesheets/style.css"}/

  %body
    #chat-list
      .nav.three-col
        .left-col
          %a.button{:href => "/"}
            %i.material-icons close
        .mid-col
          %a.tab.active{:href => "#"}
            訊息
            %sup 4
          %a.tab{:href => "notification.html"}
            通知
            %sup 4
        .right-col  
          %a.button{:href => "/"}
            %i.material-icons  

      -# 示範未讀訊息
      .search
        %input.filter{:placeholder => "搜尋", :type => "search"}/

    .chat-content
      .spacer 個人檔案
      .unit.profile
        .avatar
          .wrapper
            %img{:src => "img/avatar/a#{1 + rand(21)}.jpg"}/
        %a.content{:href => "settings.html"}
          .people
            .name
              張玉豪
            .timestamp
              個人檔案
          .text
            @solda-hero （或顯示「訪客 002834773」）
          .extra
            點一下變更設定
      .spacer 線上
      .unit.unread
        .avatar
          .wrapper
            %img{:src => "img/avatar/a#{1 + rand(21)}.jpg"}/
        %a.content{:href => "message.html"}
          .people
            .name
              = zh_lorem_name
            .timestamp
              = lorem_date("%m/%d")

          .text
            = zh_lorem_sentences(2)
          .extra 訂單 #12345
      .unit.unread
        .avatar
          .wrapper
            %img{:src => "img/avatar/a#{1 + rand(21)}.jpg"}/
        %a.content{:href => "message.html"}
          .people
            .name
              = zh_lorem_name
            .timestamp
              = lorem_date("%m/%d")

          .text
            = zh_lorem_sentences(2)
            / = zh_lorem_sentences(2)
          .extra 訂單 #12345

      - 28.times do
        -# 示範不同的聊天室標題（訂單）
        .unit
          .avatar
            .wrapper
              %img{:src => "img/avatar/a#{1 + rand(21)}.jpg"}/
          %a.content{:href => "message.html"}
            .people
              .name
                = zh_lorem_name
              .timestamp
                = lorem_date("%m/%d")

            .text
              = zh_lorem_sentences(2)
            .extra 訂單 #12345

        -# 示範不同的聊天室標題（商品）
        .unit
          .avatar
            .wrapper
              %img{:src => "img/avatar/a#{1 + rand(21)}.jpg"}/
          %a.content{:href => "message.html"}
            .people
              .name
                = zh_lorem_name
              .timestamp
                = lorem_date("%m/%d")

            .text
              = zh_lorem_sentences(2)
            .extra 關於「聖經好讀版」

    -# end of #chat-list
    
    -# Live Reload
    = livereload_js if ENV["RACK_ENV"] != "production"

